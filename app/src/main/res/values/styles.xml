<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CoolBlue</item>
        <item name="colorPrimaryDark">@color/logonBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextStyle" parent="android:Widget">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="MenuItems" parent="android:Widget">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:drawableRight">@drawable/arrow4</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="MenuImage" parent="android:Widget">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>

    </style>
    <style name="TextLabels" parent="android:Widget">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
