<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Citizen.CitizenMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/scrollView">

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/toolbar"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/info_card1"
                cardCornerRadius="20dp"
                card_view:cardBackgroundColor="#ffffff"
                cardUseCompatPadding="true"

                card_view:cardElevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView9"
                            android:src="@drawable/change_password"
                            style="@style/MenuImage" />

                        <TextView
                            android:id="@+id/DrivingLicense"
                            android:text="Change Password"
                            style="@style/MenuItems" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#dbdada"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView10"
                            android:src="@drawable/setup_preference"
                            style="@style/MenuImage" />

                        <TextView
                            android:id="@+id/Insurance"
                            android:text="Setup Preferences"
                            style="@style/MenuItems" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#dbdada"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView11"
                            android:src="@drawable/manage_profile"
                            style="@style/MenuImage" />

                        <TextView
                            android:id="@+id/MedicalReport"
                            android:text="Manage your Profile"
                            style="@style/MenuItems" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#dbdada"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:id="@+id/imageView12"
                                android:src="@drawable/my_rewards"
                                style="@style/MenuImage" />

                            <TextView
                                android:id="@+id/MyRewardsEarnings"
                                android:text="My Rewards Earnings"
                                style="@style/MenuItems" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#dbdada"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:id="@+id/imageView13"
                                android:src="@drawable/my_report_violation"
                                style="@style/MenuImage" />

                            <TextView
                                android:id="@+id/MyReportedViolations"
                                android:text="My Reported Violations"
                                style="@style/MenuItems" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#dbdada"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:id="@+id/imageView14"
                                android:src="@drawable/my_report_incident"
                                style="@style/MenuImage" />

                            <TextView
                                android:id="@+id/MyReportedIncidents"
                                android:text="My Reported Incidents"
                                style="@style/MenuItems" />

                        </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
